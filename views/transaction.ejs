<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>description</th>
            <th>amount</th>
            <th>category</th>
            <th>date</th>
            <th>delete</th>
            <th>edit</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(item => {%>
            <tr>
                <td> <%= item.description %> </td>
                <td><%= item.amount %></td>
                <td><%= item.category %></td>
                <td><%= item.date %></td>
                <td>
                <a href="/transaction/remove/<%=item._id %>">
                    <i class="bi bi-trash"></i>
                </a>
                </td>    
                <td>
                <a href="/transaction/edit/<%=item._id %>">
                    <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
            </tr>
            
            <% }) %>

    </tbody>
</table>

